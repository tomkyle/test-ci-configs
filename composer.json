{
    "name": "vendor/package",
    "description": "PHP Package boilerplate",

    "authors": [{
        "name": "Carsten Witt",
        "email": "tomkyle@posteo.de",
        "role": "Developer"
    }],

    "license": "MIT",

    "autoload": {
        "psr-4": {
            "Vendor\\Namespace\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/src"
        }
    },

    "require": {
        "php": "^7.3|^8.0",
        "psr/log": "^1.1",
        "psr/cache": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-client": "^1.0"
    },

    "require-dev": {
        "nyholm/psr7": "^1.3",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/cache": "^5.0",

        "phpunit/phpunit": "^9.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "php-coveralls/php-coveralls": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "spatie/phpunit-watcher": "^1.0",
        "phpstan/phpstan": "^0.12",
        "laminas/laminas-log": "^2.0"
    },

    "scripts": {
        "phpstan"     : "phpstan analyse --configuration phpstan.neon --no-progress -vvv",
        "phpcs"       : "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes src/",
        "phpcs-apply" : "php-cs-fixer fix -vv --allow-risky=yes src/",

        "phpunit"     : "phpunit --coverage-text",
        "phpunit-coverage": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-clover tests/build/clover.xml",

        "test": [
            "@phpcs",
            "@phpunit"
        ]
    },

    "suggest": {
        "nyholm/psr7": "PSR-17 factories",
        "guzzlehttp/guzzle": "PSR-18 client (as of v7)"
    }
}
